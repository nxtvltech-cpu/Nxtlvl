<style>
.social-float-widget {
  position: fixed;
  bottom: 30px;
  right: 30px;
  z-index: 9999;
  font-family: var(--font-body-family);
}

.social-float-toggle {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  background: linear-gradient(135deg, var(--nx-green), var(--nx-purple));
  color: #0A0A0A;
  padding: 1rem 1.5rem;
  border-radius: 50px;
  cursor: pointer;
  box-shadow: 0 8px 24px rgba(0, 255, 133, 0.4);
  transition: all 0.3s ease;
  font-weight: 600;
  font-size: 1rem;
  animation: pulse-glow 3s ease-in-out infinite;
}

.social-float-toggle:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 12px 32px rgba(0, 255, 133, 0.6);
}

.toggle-icon {
  display: flex;
  align-items: center;
  animation: share-bounce 2s ease-in-out infinite;
}

.toggle-text {
  font-weight: 700;
  letter-spacing: 0.5px;
}

.social-float-panel {
  position: absolute;
  bottom: 80px;
  right: 0;
  width: 380px;
  max-width: calc(100vw - 40px);
  background: rgba(20, 20, 20, 0.98);
  border: 2px solid var(--nx-green);
  border-radius: 20px;
  box-shadow: 0 16px 48px rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  opacity: 0;
  visibility: hidden;
  transform: translateY(20px) scale(0.9);
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  overflow: hidden;
}

.social-float-panel.active {
  opacity: 1;
  visibility: visible;
  transform: translateY(0) scale(1);
}

.social-float-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--nx-green), var(--nx-purple), var(--nx-green));
  background-size: 200% 100%;
  animation: gradient-flow 3s ease infinite;
}

.social-float-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  border-bottom: 1px solid rgba(0, 255, 133, 0.2);
}

.social-float-header h4 {
  margin: 0;
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--nx-green);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.close-btn {
  background: rgba(255, 255, 255, 0.1);
  border: none;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #FFFFFF;
}

.close-btn:hover {
  background: rgba(255, 0, 0, 0.2);
  transform: rotate(90deg);
}

.social-links-container {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.social-link {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  text-decoration: none;
  color: #FFFFFF;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.social-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 133, 0.1), transparent);
  transition: left 0.5s ease;
}

.social-link:hover::before {
  left: 100%;
}

.social-link:hover {
  transform: translateX(-5px);
  border-color: var(--nx-green);
  background: rgba(0, 255, 133, 0.05);
}

.social-link.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.social-link.disabled:hover {
  transform: none;
  border-color: rgba(255, 255, 255, 0.1);
  background: rgba(255, 255, 255, 0.03);
}

.social-icon {
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  transition: all 0.3s ease;
}

.social-link.instagram .social-icon {
  background: linear-gradient(135deg, #833AB4, #E1306C, #F77737);
}

.social-link.instagram .social-icon svg {
  stroke: #FFFFFF;
  fill: none;
}

.social-link.tiktok .social-icon {
  background: linear-gradient(135deg, #000000, #00f2ea, #ff0050);
}

.social-link.tiktok .social-icon svg {
  fill: #FFFFFF;
}

.social-link.whatsapp .social-icon {
  background: linear-gradient(135deg, #25D366, #128C7E);
}

.social-link.whatsapp .social-icon svg {
  fill: #FFFFFF;
}

.social-link:hover .social-icon {
  transform: scale(1.1) rotate(5deg);
}

.social-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.social-name {
  font-weight: 700;
  font-size: 1rem;
  color: #FFFFFF;
}

.social-description {
  font-size: 0.85rem;
  color: rgba(255, 255, 255, 0.6);
}

.social-arrow {
  font-size: 1.5rem;
  color: var(--nx-green);
  transition: transform 0.3s ease;
}

.social-link:hover .social-arrow {
  transform: translateX(5px);
}

.social-badge {
  font-size: 1.2rem;
}

.social-float-footer {
  padding: 1rem 1.5rem;
  text-align: center;
  border-top: 1px solid rgba(0, 255, 133, 0.2);
  background: rgba(0, 255, 133, 0.03);
}

.social-float-footer p {
  margin: 0;
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.7);
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 8px 24px rgba(0, 255, 133, 0.4);
  }
  50% {
    box-shadow: 0 8px 32px rgba(138, 43, 226, 0.6);
  }
}

@keyframes share-bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-3px);
  }
}

@keyframes gradient-flow {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .social-float-widget {
    bottom: 20px;
    right: 20px;
  }

  .social-float-toggle {
    padding: 0.875rem 1.25rem;
    font-size: 0.9rem;
  }

  .toggle-text {
    display: none;
  }

  .social-float-panel {
    width: calc(100vw - 40px);
    right: -10px;
  }

  .social-link {
    padding: 0.875rem;
  }

  .social-icon {
    width: 40px;
    height: 40px;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  .social-float-toggle,
  .toggle-icon,
  .social-icon {
    animation: none;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const socialFloatToggle = document.getElementById('social-float-toggle');
  const socialFloatPanel = document.getElementById('social-float-panel');
  const closeSocialFloat = document.getElementById('close-social-float');

  if (socialFloatToggle && socialFloatPanel) {
    // Toggle panel
    socialFloatToggle.addEventListener('click', function(e) {
      e.stopPropagation();
      socialFloatPanel.classList.toggle('active');
    });

    // Close button
    if (closeSocialFloat) {
      closeSocialFloat.addEventListener('click', function(e) {
        e.stopPropagation();
        socialFloatPanel.classList.remove('active');
      });
    }

    // Close when clicking outside
    document.addEventListener('click', function(e) {
      if (!socialFloatPanel.contains(e.target) && !socialFloatToggle.contains(e.target)) {
        socialFloatPanel.classList.remove('active');
      }
    });

    // Prevent clicks inside panel from closing
    socialFloatPanel.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  }
});
</script>
{%- endif -%}
