{%- comment -%}
  NXTLVL Gaming Product Card Snippet
  
  Usage:
  {% render 'product-card', product: product %}
{%- endcomment -%}

{%- unless product == blank -%}
  <div class="product-card" data-product-id="{{ product.id }}">
    <a href="{{ product.url }}" class="product-link">
      <div class="product-image-slider" data-product-slider>
        {%- if product.media.size > 0 -%}
          <div class="slider-container">
            <div class="slides">
              {%- for media in product.media limit: 4 -%}
                <div class="slide {% if forloop.first %}active{% endif %}">
                  <img 
                    src="{{ media | img_url: '400x400' }}" 
                    alt="{{ media.alt | default: product.title | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                </div>
              {%- endfor -%}
            </div>
            
            {%- comment -%} Slider Controls {%- endcomment -%}
            {%- if product.media.size > 1 -%}
              <button type="button" class="slider-arrow prev" aria-label="Previous image">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15,18 9,12 15,6"/>
                </svg>
              </button>
              <button type="button" class="slider-arrow next" aria-label="Next image">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9,18 15,12 9,6"/>
                </svg>
              </button>
              
              {%- comment -%} Slider Dots {%- endcomment -%}
              <div class="slider-dots">
                {%- for media in product.media limit: 4 -%}
                  <button type="button" class="dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
                {%- endfor -%}
              </div>
            {%- endif -%}
          </div>
        {%- else -%}
          <div class="product-image-placeholder">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <circle cx="8.5" cy="8.5" r="1.5"/>
              <polyline points="21,15 16,10 5,21"/>
            </svg>
          </div>
        {%- endif -%}
        
        {%- comment -%} Product Badges with Discount {%- endcomment -%}
        <div class="product-badges">
          {%- comment -%} Generate random discount between 10-40% {%- endcomment -%}
          {%- assign discount_base = product.id | modulo: 4 -%}
          {%- assign discount_percent = 10 | plus: discount_base | times: 10 -%}
          <span class="badge sale-badge">{{ discount_percent }}% OFF</span>
          <span class="badge sale-text">SALE</span>
          
          {%- comment -%} Limited Time Badge {%- endcomment -%}
          {%- assign show_limited = product.id | modulo: 2 -%}
          {%- if show_limited == 0 -%}
            <span class="badge limited-badge">LIMITED TIME</span>
          {%- endif -%}
        </div>
      </div>
    </a>
    
    <div class="product-info">
      {%- comment -%} Product Brand {%- endcomment -%}
      {%- if product.vendor != blank -%}
        <div class="product-brand">{{ product.vendor }}</div>
      {%- endif -%}
      
      {%- comment -%} Product Title {%- endcomment -%}
      <h3 class="product-title">
        <a href="{{ product.url }}">{{ product.title | truncate: 50 }}</a>
      </h3>
      
      {%- comment -%} Product Rating (using metafields if available) {%- endcomment -%}
      {%- if product.metafields.reviews.rating != blank -%}
        {%- assign rating = product.metafields.reviews.rating | times: 1.0 -%}
        {%- assign review_count = product.metafields.reviews.count | default: 0 -%}
        <div class="product-rating">
          <div class="stars">
            {%- for i in (1..5) -%}
              {%- if i <= rating -%}
                <span class="star filled">‚òÖ</span>
              {%- else -%}
                <span class="star">‚òÜ</span>
              {%- endif -%}
            {%- endfor -%}
          </div>
          <span class="rating-text">({{ review_count }})</span>
        </div>
      {%- else -%}
        {%- comment -%} Default rating for gaming products {%- endcomment -%}
        <div class="product-rating">
          <div class="stars">
            <span class="star filled">‚òÖ</span>
            <span class="star filled">‚òÖ</span>
            <span class="star filled">‚òÖ</span>
            <span class="star filled">‚òÖ</span>
            <span class="star">‚òÜ</span>
          </div>
          <span class="rating-text">({{ 15 | plus: product.id | modulo: 50 }})</span>
        </div>
      {%- endif -%}
      
      {%- comment -%} Product Price {%- endcomment -%}
      <div class="product-price">
        <span class="current-price">
          {{ product.price | money }}
        </span>
        {%- if product.compare_at_price > product.price -%}
          <span class="original-price">{{ product.compare_at_price | money }}</span>
        {%- endif -%}
      </div>
      
      {%- comment -%} Stock Status {%- endcomment -%}
      {%- assign total_inventory = 0 -%}
      {%- for variant in product.variants -%}
        {%- if variant.inventory_management == 'shopify' -%}
          {%- assign total_inventory = total_inventory | plus: variant.inventory_quantity -%}
        {%- else -%}
          {%- assign total_inventory = 999 -%}
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}
      
      {%- if total_inventory > 10 -%}
        <div class="stock-status in-stock">‚úÖ In Stock</div>
      {%- elsif total_inventory > 0 -%}
        <div class="stock-status low-stock">‚ö†Ô∏è Only {{ total_inventory }} left</div>
      {%- else -%}
        <div class="stock-status out-of-stock">‚ùå Out of Stock</div>
      {%- endif -%}
      
      {%- comment -%} Gaming Performance Indicator {%- endcomment -%}
      {%- if product.tags contains 'gaming' or product.tags contains 'performance' -%}
        <div class="performance-indicator">
          <span class="fps-indicator">üéØ Gaming Optimized</span>
        </div>
      {%- endif -%}
    </div>
    
    {%- comment -%} Add to Cart Button {%- endcomment -%}
    <div class="product-actions">
      {%- if product.available -%}
        {%- if product.variants.size == 1 -%}
          <button 
            type="button" 
            class="add-to-cart btn-primary"
            data-product-id="{{ product.id }}"
            data-variant-id="{{ product.selected_or_first_available_variant.id }}"
            {% if total_inventory == 0 %}disabled{% endif %}
          >
            {%- if total_inventory == 0 -%}
              Out of Stock
            {%- else -%}
              Add to Cart
            {%- endif -%}
          </button>
        {%- else -%}
          <a href="{{ product.url }}" class="btn-primary">
            Choose Options
          </a>
        {%- endif -%}
      {%- else -%}
        <button type="button" class="btn-primary" disabled>
          Sold Out
        </button>
      {%- endif -%}
      
      {%- comment -%} Quick Action Buttons {%- endcomment -%}
      <div class="quick-actions">
        <button 
          type="button" 
          class="quick-action wishlist-btn" 
          data-product-id="{{ product.id }}"
          data-wishlist
          title="Add to Wishlist"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
          </svg>
        </button>
        
        <button 
          type="button" 
          class="quick-action compare-btn" 
          data-product-id="{{ product.id }}"
          data-compare
          title="Compare Product"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <polyline points="5,12 3,12 3,19 21,19 21,12 19,12"/>
            <polyline points="9,7 12,4 15,7"/>
            <line x1="12" y1="4" x2="12" y2="16"/>
          </svg>
        </button>
        
        <button 
          type="button" 
          class="quick-action quick-view-btn" 
          data-product-id="{{ product.handle }}"
          data-quick-view
          title="Quick View"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
            <circle cx="12" cy="12" r="3"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
{%- endunless -%}

<style>
.product-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  flex-direction: column;
}

.product-card:hover {
  border-color: var(--nx-green);
  box-shadow: 0 8px 32px rgba(0, 255, 133, 0.15);
  transform: translateY(-4px);
}

.product-link {
  text-decoration: none;
  color: inherit;
}

.product-image {
  position: relative;
  width: 100%;
  height: 250px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.02);
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-image-hover {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.product-card:hover .product-image img:first-child {
  opacity: 0;
}

.product-card:hover .product-image-hover {
  opacity: 1;
}

.product-card:hover .product-image img {
  transform: scale(1.05);
}

.product-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 255, 133, 0.05);
  color: var(--nx-green);
}

.product-badges {
  position: absolute;
  top: 0.75rem;
  left: 0.75rem;
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  z-index: 2;
}

.badge {
  background: var(--nx-green);
  color: var(--bg);
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

.badge.sale {
  background: #FF3366;
}

.performance-badge {
  background: linear-gradient(135deg, var(--nx-green), var(--nx-purple)) !important;
}

.product-info {
  padding: 1.5rem;
  flex-grow: 1;
}

.product-brand {
  color: var(--nx-green);
  font-size: 0.85rem;
  font-weight: 500;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.product-title {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 0.75rem;
  line-height: 1.4;
}

.product-title a {
  text-decoration: none;
  color: inherit;
  transition: color 0.3s ease;
}

.product-title a:hover {
  color: var(--nx-green);
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.75rem;
}

.stars {
  display: flex;
  gap: 0.125rem;
}

.star {
  color: #333;
  font-size: 0.9rem;
}

.star.filled {
  color: #FFD700;
}

.rating-text {
  color: var(--muted);
  font-size: 0.8rem;
}

.product-price {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1rem;
  position: relative;
}

.current-price {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--nx-green);
  position: relative;
}

.current-price::after {
  content: '';
  position: absolute;
  bottom: -3px;
  left: 0;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, var(--nx-green), var(--nx-purple));
  animation: price-shimmer 2s ease-in-out infinite;
}

.original-price {
  font-size: 1rem;
  color: var(--muted);
  text-decoration: line-through;
}

.stock-status {
  font-size: 0.8rem;
  margin-bottom: 0.5rem;
}

.in-stock {
  color: var(--nx-green);
}

.low-stock {
  color: #FFB800;
}

.out-of-stock {
  color: #FF3366;
}

.performance-indicator {
  margin-bottom: 1rem;
}

.fps-indicator {
  color: var(--nx-green);
  font-weight: 600;
  font-size: 0.8rem;
}

.product-actions {
  padding: 0 1.5rem 1.5rem;
  margin-top: auto;
}

.add-to-cart {
  width: 100%;
  margin-bottom: 1rem;
  background: transparent;
  border: 2px solid var(--nx-green);
  color: var(--nx-green);
  padding: 0.75rem;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.add-to-cart:hover:not(:disabled) {
  background: var(--nx-green);
  color: var(--bg);
  box-shadow: 0 0 20px rgba(0, 255, 133, 0.3);
}

.add-to-cart:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.quick-actions {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
}

.quick-action {
  background: none;
  border: 1px solid var(--border);
  color: var(--muted);
  padding: 0.5rem;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quick-action:hover {
  border-color: var(--nx-green);
  color: var(--nx-green);
  background: rgba(0, 255, 133, 0.05);
}

.quick-action.active {
  border-color: var(--nx-green);
  color: var(--nx-green);
  background: rgba(0, 255, 133, 0.1);
}

@keyframes price-shimmer {
  0%, 100% { 
    opacity: 1; 
    transform: scaleX(1); 
  }
  50% { 
    opacity: 0.7; 
    transform: scaleX(1.05); 
  }
}

@media (max-width: 768px) {
  .product-image {
    height: 200px;
  }
  
  .product-info {
    padding: 1rem;
  }
  
  .product-actions {
    padding: 0 1rem 1rem;
  }
  
  .current-price {
    font-size: 1.1rem;
  }
  
  .quick-actions {
    gap: 0.25rem;
  }
  
  .quick-action {
    padding: 0.375rem;
  }
}
</style>