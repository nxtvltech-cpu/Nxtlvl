{%- comment -%}
  NXTLVL Gaming Homepage Template
{%- endcomment -%}

{%- paginate collections.all.products by 12 -%}

<!-- Hero Section -->
<section class="hero">
  <div class="hero-content">
    <h1>
      <span class="nxt">NXT</span><span class="lvl">LVL</span>
    </h1>
    <p>Take Your Gaming to the Next Level</p>
    <a href="{{ collections.all.url }}" class="btn-primary">
      Shop Now
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
</section>

<!-- Brand Carousel -->
<section class="brand-carousel">
  <div class="brand-track">
    <div class="brand-slide">
      <div class="brand-item nvidia">NVIDIA</div>
      <div class="brand-item amd">AMD RYZEN</div>
      <div class="brand-item intel">INTEL</div>
      <div class="brand-item razer">RAZER</div>
      <div class="brand-item logitech">LOGITECH G</div>
      <div class="brand-item corsair">CORSAIR</div>
      <div class="brand-item hyperx">HYPERX</div>
      <div class="brand-item steelseries">STEELSERIES</div>
      <div class="brand-item nzxt">NZXT</div>
      <div class="brand-item coolermaster">COOLER MASTER</div>
      <div class="brand-item thermaltake">THERMALTAKE</div>
      <div class="brand-item elgato">ELGATO</div>
      <div class="brand-item blue">BLUE</div>
    </div>
    <!-- Duplicate for seamless loop -->
    <div class="brand-slide">
      <div class="brand-item nvidia">NVIDIA</div>
      <div class="brand-item amd">AMD RYZEN</div>
      <div class="brand-item intel">INTEL</div>
      <div class="brand-item razer">RAZER</div>
      <div class="brand-item logitech">LOGITECH G</div>
      <div class="brand-item corsair">CORSAIR</div>
      <div class="brand-item hyperx">HYPERX</div>
      <div class="brand-item steelseries">STEELSERIES</div>
      <div class="brand-item nzxt">NZXT</div>
      <div class="brand-item coolermaster">COOLER MASTER</div>
      <div class="brand-item thermaltake">THERMALTAKE</div>
      <div class="brand-item elgato">ELGATO</div>
      <div class="brand-item blue">BLUE</div>
    </div>
  </div>
</section>

<!-- Slogan Band -->
<section class="slogan-band">
  <div class="slogan-content">
    Improve Your Game. Take It to NXTLVL.
  </div>
</section>

<!-- Featured Categories -->
{% if collections.size > 0 %}
<section class="featured-categories section-padding">
  <div class="container">
    <h2 class="section-title">Gaming Categories</h2>
    <div class="categories-grid">
      {% assign featured_collections = collections | where: 'id', settings.featured_collection_1 | concat: collections | where: 'id', settings.featured_collection_2 | concat: collections | where: 'id', settings.featured_collection_3 %}
      
      {% if featured_collections.size == 0 %}
        {% assign featured_collections = collections | sort: 'products_count' | reverse | limit: 6 %}
      {% endif %}
      
      {% for collection in featured_collections limit: 6 %}
        {% if collection.products_count > 0 %}
          <div class="category-card">
            <a href="{{ collection.url }}">
              <div class="category-image">
                {% if collection.image %}
                  <img src="{{ collection.image | img_url: '400x400' }}" 
                       alt="{{ collection.title | escape }}"
                       loading="lazy">
                {% else %}
                  <div class="category-placeholder">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21,15 16,10 5,21"/>
                    </svg>
                  </div>
                {% endif %}
              </div>
              <div class="category-info">
                <h3 class="gaming-category">{{ collection.title }}</h3>
                <p class="category-count">{{ collection.products_count }} products</p>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- Featured Products -->
<section class="featured-products section-padding">
  <div class="container">
    <h2 class="section-title">Featured Gaming Gear</h2>
    
    <div class="product-grid">
      {% for product in collections.all.products limit: 8 %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
    
    <div class="section-footer">
      <a href="{{ collections.all.url }}" class="btn-secondary">
        View All Products
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<!-- Why NXTLVL Section -->
<section class="why-nxtlvl section-padding">
  <div class="container">
    <h2 class="section-title">Why Choose NXTLVL</h2>
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <h3>Premium Quality</h3>
        <p>Hand-picked gaming components from top brands for maximum performance.</p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="12" cy="12" r="3"/>
            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
          </svg>
        </div>
        <h3>Expert Support</h3>
        <p>Get personalized recommendations from our gaming specialists.</p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <rect x="1" y="3" width="15" height="13"/>
            <polygon points="16,6 22,6 19,13 16,13"/>
            <circle cx="5.5" cy="18.5" r="2.5"/>
            <circle cx="18.5" cy="18.5" r="2.5"/>
          </svg>
        </div>
        <h3>Fast Shipping</h3>
        <p>Free shipping on orders over $150. Get your gear delivered fast.</p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <polyline points="20,6 9,17 4,12"/>
          </svg>
        </div>
        <h3>Verified Reviews</h3>
        <p>Real reviews from verified gamers to help you make informed decisions.</p>
      </div>
    </div>
  </div>
</section>

{%- endpaginate -%}

<style>
.section-padding {
  padding: 4rem 0;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 3rem;
  background: linear-gradient(135deg, var(--text) 0%, var(--nx-green) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero {
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
  margin-top: 110px;
}

.hero-content h1 {
  font-size: clamp(3rem, 8vw, 6rem);
  font-weight: 800;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, var(--text) 0%, var(--nx-green) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-content p {
  font-size: 1.25rem;
  color: var(--muted);
  margin-bottom: 2rem;
  max-width: 600px;
}

.slogan-band {
  background: linear-gradient(90deg, var(--nx-green), var(--nx-purple));
  color: var(--bg);
  padding: 1rem 0;
  text-align: center;
  font-weight: 600;
  font-size: 1.1rem;
  position: relative;
  overflow: hidden;
}

.slogan-band::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shine-sweep 3s ease-in-out infinite;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.category-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.category-card:hover {
  border-color: var(--nx-green);
  box-shadow: 0 8px 32px rgba(0, 255, 133, 0.15);
  transform: translateY(-4px);
}

.category-card a {
  display: block;
  text-decoration: none;
  color: inherit;
}

.category-image {
  height: 200px;
  position: relative;
  overflow: hidden;
}

.category-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.category-card:hover .category-image img {
  transform: scale(1.05);
}

.category-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 255, 133, 0.1);
  color: var(--nx-green);
}

.category-info {
  padding: 1.5rem;
}

.category-info h3 {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 0.5rem;
}

.category-count {
  color: var(--muted);
  font-size: 0.9rem;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.feature-card {
  text-align: center;
  padding: 2rem;
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 12px;
  transition: all 0.3s ease;
}

.feature-card:hover {
  border-color: var(--nx-green);
  box-shadow: 0 8px 32px rgba(0, 255, 133, 0.15);
}

.feature-icon {
  color: var(--nx-green);
  margin-bottom: 1rem;
}

.feature-card h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 1rem;
}

.feature-card p {
  color: var(--muted);
  line-height: 1.6;
}

.section-footer {
  text-align: center;
  margin-top: 3rem;
}

.gaming-category::before {
  content: '🎮';
  margin-right: 0.5rem;
}

@keyframes shine-sweep {
  0% { left: -100%; }
  100% { left: 100%; }
}

@media (max-width: 768px) {
  .hero {
    padding: 0 1rem;
    margin-top: 120px;
  }
  
  .hero-content h1 {
    font-size: clamp(2rem, 8vw, 4rem);
  }
  
  .hero-content p {
    font-size: 1rem;
  }
  
  .categories-grid {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .section-padding {
    padding: 2rem 0;
  }
}
</style>