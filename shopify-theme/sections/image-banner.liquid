{%- comment -%}
  NXTLVL Gaming - Image Banner Section
{%- endcomment -%}

<section class="image-banner" style="background-image: url('{{ section.settings.image | img_url: '1920x' }}');">
  <div class="image-banner__overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  <div class="container">
    <div class="image-banner__content" style="text-align: {{ section.settings.text_alignment }};">
      {%- if section.settings.title != blank -%}
        <h2 class="image-banner__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <p class="image-banner__text">{{ section.settings.text }}</p>
      {%- endif -%}
      {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="btn-primary">{{ section.settings.button_label }}</a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
.image-banner {
  position: relative;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
  padding: 4rem 0;
}

.image-banner__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.image-banner__content {
  position: relative;
  z-index: 2;
  max-width: 700px;
  margin: 0 auto;
}

.image-banner__title {
  font-size: 3rem;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 1rem;
}

.image-banner__text {
  font-size: 1.2rem;
  color: #FFFFFF;
  margin-bottom: 2rem;
}

@media (max-width: 768px) {
  .image-banner {
    min-height: 300px;
  }
  
  .image-banner__title {
    font-size: 2rem;
  }
  
  .image-banner__text {
    font-size: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Image Banner"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}
