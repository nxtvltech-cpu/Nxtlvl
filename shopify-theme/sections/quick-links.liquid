{%- comment -%}
  NXTLVL Gaming - Quick Links Section
{%- endcomment -%}

<section class="quick-links-section section-padding">
  <div class="container">
    <div class="quick-links-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="quick-links-column">
              {%- if block.settings.heading != blank -%}
                <h3 class="quick-links-heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="quick-links-list">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li class="quick-link-item">
                      <a href="{{ link.url }}" class="quick-link">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
.quick-links-section {
  padding: 3rem 0;
  background: rgba(255, 255, 255, 0.02);
  border-top: 1px solid var(--border);
}

.quick-links-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 3rem;
}

.quick-links-column {
  display: flex;
  flex-direction: column;
}

.quick-links-heading {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--nx-green);
  margin-bottom: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.quick-links-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.quick-link-item {
  display: flex;
}

.quick-link {
  color: var(--text);
  text-decoration: none;
  font-size: 0.95rem;
  transition: all 0.3s ease;
  position: relative;
  padding-left: 1rem;
}

.quick-link::before {
  content: 'â†’';
  position: absolute;
  left: 0;
  color: var(--nx-green);
  opacity: 0;
  transform: translateX(-5px);
  transition: all 0.3s ease;
}

.quick-link:hover {
  color: var(--nx-green);
  padding-left: 1.5rem;
}

.quick-link:hover::before {
  opacity: 1;
  transform: translateX(0);
}

@media (max-width: 768px) {
  .quick-links-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
}

@media (max-width: 480px) {
  .quick-links-grid {
    grid-template-columns: 1fr;
  }
}
</style>

