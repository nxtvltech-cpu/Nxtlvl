{%- comment -%}
  NXTLVL Gaming Footer Section
{%- endcomment -%}

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <div class="footer-brand">
          <a href="{{ routes.root_url }}" class="footer-logo">
            <span class="nxt">NXT</span>
            <span class="lvl">LVL</span>
          </a>
          <p class="footer-tagline">Take Your Gaming to the Next Level</p>
          <div class="social-links">
            {%- if settings.social_twitter != blank -%}
              <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                </svg>
              </a>
            {%- endif -%}
            
            {%- if settings.social_instagram != blank -%}
              <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
              </a>
            {%- endif -%}
            
            {%- if settings.social_youtube != blank -%}
              <a href="{{ settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
